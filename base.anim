use std


bg = fullRect("blue")
first_slide = screenCenter(image("modpicking.png"))
second_slide = screenCenter(image("modpig.png"))

# forever
fork animate bg

# until the next breakpoint
animate 0.4s first_slide fadeIn
animate first_slide

break 2s
animate 0.4s first_slide fadeOut

animate 0.4s second_slide fadeIn
animate second_slide

break 4s
animate 0.4s second_slide fadeOut

